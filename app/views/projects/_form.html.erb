<%= form_for(@project, :html => {role: "form"}) do |f| %>
  <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class:'form-control', placeholder: "Title of project", autofocus: true %>
  </div>
  <div class="form-group">
      <%= f.label :plan %>
      <%= f.text_area :plan, rows: 10, class: 'form-control', placeholder: "Body of project" %>
  </div> 
  <div class="form-group">
    <%= f.label :categories %>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
      <% cb.label(class: "checkbox") {cb.check_box + cb.text} %>
    <% end %>
    </div>
  <div class="form-group">
    <%= f.submit class:'btn btn-primary btn-lg' %>
  </div>
<% end %>
<div class="col-md-12 text-center">  
  [ <%= link_to 'Cancel request and return projects', projects_path %> ]
</div>